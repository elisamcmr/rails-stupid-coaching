<h1>Stupid Coaching</h1>

<div class="mb-4">
  <div class="p-3 border rounded bg-light">
    <div class="mt-2">
      <%= params[:question] %>
      <p class="text-muted">- You</p>
    </div>
  </div>
</div>

<div class="mb-4">
  <div class="p-3 border rounded" style="background-color: #fff9c4;">
    <div class="mt-2">
      <%= @answer %>
      <p class="text-muted">- Your coach</p>
    </div>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Ask another question", ask_path, class: "btn btn-link text-decoration-none" %>
</div>
